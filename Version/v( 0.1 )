javascript:(function(){const endpointRe=/(?:^|["'`])((?:\/|https?:\/\/|\/\/)[^"'`\s<>]{2,})/g,jsRe=/(?:^|["'`])((?:\/|https?:\/\/|\/\/)[^"'`\s<>]+\.js(?:\?[^"'`]*)?)/g;const endpoints=new Set(),jsFiles=new Set();function collect(t){if(!t)return;for(const m of t.matchAll(endpointRe)){const u=m[1];if(u.length>2)endpoints.add(u)}for(const m of t.matchAll(jsRe)){jsFiles.add(m[1])}}document.querySelectorAll("script").forEach(s=>{if(s.src){jsFiles.add(s.src);fetch(s.src).then(r=>r.text()).then(t=>collect(t)).catch(()=>{})}else collect(s.textContent)});collect(document.documentElement.outerHTML);setTimeout(()=>{const overlay=document.createElement("div");overlay.style.cssText="position:fixed;inset:0;background:#0d0d0d;color:#00ff41;font-family:monospace;z-index:99999;padding:30px;overflow:auto;";let%20normalized=[...endpoints].map(u=>{try{return%20u.startsWith("http")?u:new%20URL(u,location.origin).href}catch{return%20null}}).filter(Boolean).sort();let%20groups={};normalized.forEach(u=>{let%20group="misc";try{const%20url=new%20URL(u);if(url.hostname===location.hostname){const%20seg=url.pathname.split("/")[1]||"root";group=/^[a-zA-Z0-9_-]{3,}$/.test(seg)?seg:"misc"}else{group="external"}}catch{group="misc"}(groups[group]=groups[group]||[]).push(u)});let%20html=`<div%20style="text-align:center;margin-bottom:25px;"><h1%20style="margin:0;font-size:48px;color:#8B0000;letter-spacing:2px;">Scrad</h1><div%20style="margin-top:8px;font-size:14px;color:#ccc;">About%20this:%20This%20tool%20finds%20hidden%20endpoints%20across%20the%20entire%20website.</div></div><h3%20style="color:#fff;border-bottom:2px%20solid%20#00ff41;padding-bottom:10px;">Discovered%20Endpoints%20(${normalized.length})</h3>`;Object.keys(groups).sort().forEach(g=>{html+=`<div%20style="margin-bottom:25px;"><div%20style="color:#ffcc00;font-weight:bold;font-size:1.1em;border-left:4px%20solid%20#ffcc00;padding-left:10px;margin-bottom:8px;">/${g.toUpperCase()}</div>`;groups[g].forEach(u=>{html+=`<div%20style="margin-left:20px;"><a%20href="${u}"%20target="_blank"%20style="color:#00ff41;text-decoration:none;word-break:break-all;">${u}</a></div>`});html+=`</div>`});overlay.innerHTML=html;const%20close=document.createElement("button");close.textContent="CLOSE%20[X]";close.style.cssText="position:fixed;top:10px;right:10px;background:#5A0000;color:#fff;border:none;padding:10px%2020px;font-weight:bold;cursor:pointer;";close.onclick=()=>overlay.remove();overlay.appendChild(close);document.body.appendChild(overlay)},3000)})();
